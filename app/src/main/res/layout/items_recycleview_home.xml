<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:padding="16dp"
    android:layout_height="wrap_content">



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imv_Book_Avatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
      android:src="@mipmap/ic_launcher"/>

    <TextView
        android:textSize="24sp"
        android:textColor="#D8B037"
        android:id="@+id/tv_Book_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/imv_Book_Avatar"
        app:layout_constraintTop_toTopOf="@+id/imv_Book_Avatar" />

    <TextView
        android:id="@+id/tv_Book_Chapter"
        android:textColor="@color/text_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"

        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/tv_Book_Name"
        app:layout_constraintStart_toStartOf="@+id/tv_Book_Name"
        app:layout_constraintTop_toBottomOf="@+id/tv_Book_Name" />

    <TextView
        android:textColor="@color/text_color"
        android:id="@+id/tv_Book_Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/tv_Book_Chapter"
        app:layout_constraintStart_toStartOf="@+id/tv_Book_Chapter"
        app:layout_constraintTop_toBottomOf="@+id/tv_Book_Chapter" />
</androidx.constraintlayout.widget.ConstraintLayout>